<%= form_for @event, url: events_path(@event), method: 'post', html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages' %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>

  <%= f.label :date_time, "Date and time" %>
  <%= f.datetime_local_field :date_time, class: 'form-control' %>

  <%= f.label :address %>
  <%= f.text_field :address, class: 'form-control' %>

  <%= f.label :price %>
  <%= f.text_field :price, class: 'form-control' %>

  <%= f.label :photo %>
  <% if @event.photo.present? %>
    <%= image_tag @event.photo.url(:thumb) %>
  <% end %>
  <%= f.file_field :photo %>


  <%= f.label :website %>
  <%= f.text_field :website, class: 'form-control' %>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
